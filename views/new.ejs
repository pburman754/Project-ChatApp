<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Start a New Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/chats">
                <i class="fas fa-arrow-left me-2"></i> Back to Chats
            </a>
            <div class="d-flex">
                <a href="/logout" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <%- include('partials/flash') %>
                <div class="new-chat-form p-5">
                    <div class="form-header text-center mb-4">
                        <h2><i class="fas fa-plus-circle text-success"></i> Start a New Chat</h2>
                        <p class="text-muted">Send a message to someone new</p>
                    </div>
                    <form action="/chats" method="POST" onsubmit="return validateForm()">
                        <input type="hidden" id="from" name="from" value="<%= currentUser.username %>">
                        <div class="mb-3">
                            <label for="to" class="form-label">
                                <i class="fas fa-user text-primary"></i> Recipient Username
                            </label>
                            <input type="text" class="form-control" id="to" name="to" placeholder="Enter username..." required>
                        </div>
                        <div class="mb-3">
                            <label for="msg" class="form-label">
                                <i class="fas fa-comment text-info"></i> Your Message
                            </label>
                            <textarea class="form-control" name="msg" rows="4" placeholder="Type your message here..." required></textarea>
                            <div class="form-text">Maximum 50 characters</div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
    <script>
        function validateForm() {
            const fromUser = document.getElementById('from').value;
            const toUser = document.getElementById('to').value;

            if (fromUser === toUser) {
                alert('You cannot send a message to yourself.');
                return false;
            }
            return true;
        }
    </script>
</body>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
</body>
</html>
